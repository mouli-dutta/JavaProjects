<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyJavaProjects" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->

        <item name="android:itemBackground">@color/main_screen</item>
    </style>

    <!--AlertDialog style for delete dialog-->
    <style name="DeleteDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/list_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <!--Positive Button Style of AlertDialog-->
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/greenDark</item>
        <item name="backgroundTint">@color/list_background</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!--Negative Button Style of AlertDialog-->
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/redDark</item>
        <item name="backgroundTint">@color/list_background</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- TextInputLayout Outline box style -->
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/accent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="backgroundColor">@color/white</item>
    </style>

</resources>